.user__name
  - if @user == current_user
    .user__name--edit
      = @user.nickname
      = link_to edit_user_registration_path do
        = icon 'fas', 'user-cog'
    = link_to destroy_user_session_path, method: :delete do
      = icon 'fas', 'sign-out-alt'
  - else
    = @user.nickname

.user__detail
  - if @user.sex
    = @user.sex
    \/
  - if @user.birthday
    = birthday_to_age(@user.birthday)
    \/
  - if @user.address
    = @user.address

.user__profile
  = simple_format(@user.profile)

.user__categories
  - @categories.each do |category|
    .user__categories--list{data: {categoryid: category.id}}
      = category.name

.user__talks
  - @categories.each do |category|
    .user__talks--lists.display_none{data: {categoryid: category.id}}
      = render partial: 'talks/talk', collection: Talk.where(user_id: @user.id, category_id: category.id), as: :talk