- if user_signed_in?
  - if Like.find_by(user_id: current_user.id, talk_id: talk.id)
    = link_to talk_likes_path(talk), method: :delete, remote: true do
      = icon 'fas', 'star'
  - else
    = link_to talk_likes_path(talk), method: :post, remote: true do
      = icon 'far', 'star'
  = talk.likes.count
- else
  = icon 'far', 'star'
  = talk.likes.count