%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  
  .field
    %em 必須
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true
  
  .field
    %em 必須
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  
  .field
    %em 必須
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length}文字以上)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  
  .field
    %em 必須
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  
  .field
    = f.label :profile
    %br/
    = f.text_area :profile, autofocus: true

  .field
    = f.label :birthday
    %em (年代のみ他のユーザーに公開されます(例:20代))
    %br/
    = f.date_field :birthday, autofocus: true
  
  .field
    = f.label :sex
    %em (他のユーザーに公開されます)
    %br/
    = f.radio_button :sex, :男
    = f.label :男
    = f.radio_button :sex, :女
    = f.label :女
    = f.radio_button :sex, :その他
    = f.label :その他
  
  .field
    = f.label :address
    %em (他のユーザーに公開されます)
    %br/
    = f.select :address, User.addresses.keys, {prompt: "---"}
  
  .actions
    = f.submit "Sign up"

= render "devise/shared/links"
