.search-title
  検索結果

.search-result
  - if @result_genres.present?
    .result__title
      ジャンル
    .result__genre
      %ul.result__content
        - @result_genres.each do |genre|
          %li.genre_name{data: {id: genre.id}}
            = genre.name
      %ul#category_area

.search-result
  - if @result_categories.present?
    .result__title
      カテゴリー
    %ul.result__content
      - @result_categories.each do |category|
        %li
          = link_to category.name, category_talks_path(category)