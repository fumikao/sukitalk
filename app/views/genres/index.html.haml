.top-message
  %p スキなことを、スキな人どうしで、
  %p スキなだけ、話そう！
%hr
.top-group__index
  .top-genre
    .contents-title ジャンル一覧
    %ul
      - @genres.each do |genre|
        %li
          = genre.name
  .top-category
    .contents-title カテゴリー一覧
    %ul
      - @categories.each do |category|
        %li
          = link_to category.name, category_talks_path(category)
%hr
.top-group__new
  .top-group__new--genre
    .contents-title ジャンルから作る！
    = form_for @genre do |f|
      = f.label "(1)ジャンル作成"
      %br
      = f.text_field :name, placeholder: "ジャンル名", class: "input-text"
      = f.submit "＋", class: "input-submit"
    = form_for @category do |f|
      = f.label "(2)ジャンル選択"
      %br
      = f.collection_select :genre_id, @genres, :id, :name, {prompt: '---'}
      %br
      = f.label "(3)カテゴリ作成"
      %br
      = f.text_field :name, placeholder: "カテゴリ名", class: "input-text"
      = f.submit "＋", class: "input-submit"
  .top-group__new--category
    .contents-title カテゴリーを作る！
    = form_for @category do |f|
      = f.label "(1)ジャンル選択"
      %br
      = f.collection_select :genre_id, @genres, :id, :name, {prompt: '---'}
      %br
      = f.label "(2)カテゴリ作成"
      %br
      = f.text_field :name, placeholder: "カテゴリ名", class: "input-text"
      = f.submit "＋", class: "input-submit"

